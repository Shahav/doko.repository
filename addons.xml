<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
    <addon id="doko.repository" name="Doko Repository" version="0.1.34" provider-name="doko">
        <extension point="xbmc.addon.repository" name="Doko Repository">
            <info compressed="false">https://raw.githubusercontent.com/doko-desuka/doko.repository/master/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/doko-desuka/doko.repository/master/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.githubusercontent.com/doko-desuka/doko.repository/master/</datadir>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary>Doko Kodi Add-ons</summary>
            <description>Add-ons for Kodi</description>
            <disclaimer></disclaimer>
            <platform>all</platform>
        </extension>
    </addon>

    
    <addon id="plugin.video.toonmania2" name="Toonmania2" version="0.3.2" provider-name="doko, MetalKettle">
      <requires>
        <import addon="xbmc.python" version="2.19.0"/>
        <import addon="script.module.requests" />
        <import addon="script.module.beautifulsoup4"/>
      </requires>
      <extension point="xbmc.python.pluginsource" library="Default.py">
        <provides>video</provides>
      </extension>
      <extension point="xbmc.addon.metadata">
        <summary lang="en">Toonmania2</summary>
        <description lang="en">Watch cartoons and anime from [COLOR khaki][B]Animetoon[/B][/COLOR] (www.animetoon.org) and [COLOR khaki][B]Animeplus[/B][/COLOR] (www.animeplus.tv).[CR]Go pay them a visit![CR][CR]Add-on by doko.</description>
        <news>[COLOR khaki][B]Toonmania2[/B][/COLOR] - Cartoons &amp; Anime[CR][CR][B]0.3.2:[/B][CR]- Added Autoplay option, see settings[CR][CR][B]0.3.1:[/B][CR]- Improved movie resolving[CR]- Unicode fixes[CR]- Cleaned up comments in the script</news>
        <disclaimer lang="en"></disclaimer>
        <platform>all</platform>
        <disclaimer lang="en">The authors of this addon do not host any of the content found or have any affiliation with the content providers or the websites that it scrapes information from.</disclaimer>
      </extension>
    </addon>
    

    <addon id="plugin.video.ctoonkodi" name="CTOON Kodi" version="0.3.1" provider-name="doko, Tikipeter">
      <requires>
        <import addon="xbmc.python" version="2.1.0"/>
        <import addon="script.module.requests" />
      </requires>
      <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
      </extension>
      <extension point="xbmc.addon.metadata">
        <summary lang="en"></summary>
        <description lang="en">[COLOR mediumpurple][B]CTOON Kodi[/B][/COLOR][CR][CR]A simple addon for streaming cartoon episodes from the [B]ctoon.party[/B] website.[CR][CR]Help keep CTOON alive, donate to the host: [COLOR khaki][B]ko-fi.com/A637AV5[/B][/COLOR]</description>
        <disclaimer lang="en"></disclaimer>
        <platform>all</platform>
      </extension>
    </addon>


    <addon id="plugin.program.orderfavourites" name="Order Favourites" version="1.0.1" provider-name="doko">
      <requires>
        <import addon="xbmc.python" version="2.1.0"/>
      </requires>
      <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>executable</provides>
      </extension>
      <extension point="xbmc.addon.metadata">
        <summary lang="en"></summary>
        <description lang="en">Lets you reorder the entries in your Favourites.[CR]Use this to organize your Favourites.[CR][CR]- Use SAVE to commit your changes.[CR]- Use RESET to reload the favourites file and start over.</description>
        <disclaimer lang="en"></disclaimer>
        <platform>all</platform>
      </extension>
    </addon>
</addons>